{
  "name": "mnml-client",
  "version": "0.2.0",
  "description": "Client library for Minimal Chat",
  "author": "Tyler Sloane <tyler@minimal.chat>",
  "repository": "minimalchat/client.git",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "build": "npm run build:dev",
    "build:dev": "cross-env NODE_ENV=development webpack --progress --colors",
    "build:production": "cross-env NODE_ENV=production webpack -p --progress --colors --display-modules",
    "build:watch": "npm run build:dev -- --watch",
    "format": "prettier-eslint --trailing-comma es5 --single-quote --print-width 100 --write \"src/**/*.js\"",
    "lint": "eslint src test",
    "coverage": "npm run test -- --coverage && cat coverage/lcov.info | coveralls",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --progress",
    "start": "npm run dev"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": "((test|spec))\\.(js|jsx)$",
    "testURL": "http://localhost:8080",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/components/Skeleton/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^8.0.5",
    "chai": "^4.0.2",
    "coveralls": "^3.0.3",
    "cross-env": "^4.0.0",
    "css-loader": "^2.1.1",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.1.0",
    "jest-localstorage-mock": "^2.4.0",
    "preact-jsx-chai": "^2.2.1",
    "preact-render-to-string": "^3.7.0",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "replace-bundle-webpack-plugin": "^1.0.0",
    "style-loader": "^0.18.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "preact": "^8.1.0",
    "preact-compat": "^3.15.0",
    "prop-types": "^15.5.10",
    "socket.io-client": "^2.5.0"
  }
}
