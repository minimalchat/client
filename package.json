{
  "name": "mnml-client",
  "version": "0.2.0",
  "description": "Client library for Minimal Chat",
  "author": "Tyler Sloane <tyler@minimal.chat>",
  "repository": "minimalchat/client.git",
  "license": "BSD-3-Clause",
  "scripts": {
    "load": "artillery run test/client.load.yaml",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "build": "npm run build:dev",
    "build:dev": "cross-env NODE_ENV=development webpack --progress --colors",
    "build:production": "cross-env NODE_ENV=production webpack -p --progress --colors",
    "build:watch": "npm run build:dev -- --watch",
    "format": "prettier-eslint --trailing-comma es5 --single-quote --print-width 100 --write \"src/**/*.js\"",
    "lint": "eslint src test",
    "coverage": "npm run test -- --coverage && cat coverage/lcov.info | coveralls",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --progress",
    "start": "npm run dev"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": "((test|spec))\\.(js|jsx)$",
    "testURL": "http://localhost:8080",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/components/Skeleton/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "artillery": "^1.6.0-2",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^20.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.0",
    "preact-jsx-chai": "^2.2.1",
    "preact-render-to-string": "^3.6.0",
    "prettier-eslint": "^6.3.0",
    "prettier-eslint-cli": "^4.1.0",
    "replace-bundle-webpack-plugin": "^1.0.0",
    "style-loader": "^0.18.2",
    "uglify-js": "git://github.com/mishoo/UglifyJS2#harmony-v2.8.22",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.4"
  },
  "dependencies": {
    "preact": "^8.1.0",
    "preact-compat": "^3.15.0",
    "prop-types": "^15.5.10",
    "socket.io-client": "^2.0.3"
  }
}
